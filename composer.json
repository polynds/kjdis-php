{
  "name": "kuang/kdis",
  "autoload": {
    "psr-4": {
      "Kuang\\Kdis\\": "src/"
    }
  },
  "require": {
    "php": ">=7.4",
    "phpstan/phpstan": "1.4.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^7",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "scripts": {
    "analyse": "phpstan analyse --memory-limit 1000M -c phpstan.neon",
    "cs-fix": "php-cs-fixer fix $1"
  }
}
